<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head', {title: 'Listado de Productos'})  %>

    <body>
        <%- include('./partials/header') %>
        <section class="products-list">
            <div class="section-title">
                <h2>Ofertas</h2>
            </div>
        
            
                <% for(product of list){%>
                    <% if(product.inSale === "yes") {%> 
                    <div class="product-box">
                        
                               
                                    
                                        <a href="#"><img class="foto-producto" src="/images/products/<%= product.image %> " alt="Imagen de Producto"></a>
                                    
                                <div class="product-detail">
                                    <p class="product-name"><%=product.name %></p>
                                    <p class="product-price">Precio online:  $<%= product.price %></p>
                                    <p class="product-discount">Ahorr√°s un <%= product.discount %> </p>
                                    <p class="product-description"><%= product.description %> </p>
                                </div>

 
                    </div>
                    <% } %> 
                <% } %> 
            
            
                 
        </section>
        
         <%- include('./partials/footer') %>
    </body>

</html>